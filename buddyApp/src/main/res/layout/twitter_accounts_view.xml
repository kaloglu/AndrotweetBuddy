<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="@drawable/rounded_profile_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tw__composer_deep_gray"
                android:src="@drawable/common_plus_signin_btn_text_dark_normal" />

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileBanner"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-30dp"
                android:background="@color/grey_300"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/userNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImg"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="userName"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/biographyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNameTxt"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:text="biography Text full length 255 characters loren ipsum falan da yazabilirdin buraya bÃ¶yle de muazzam bir paragraf oldu" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/profileImg"
                android:layout_marginTop="-10dp"
                android:layout_toRightOf="@id/userNameTxt"
                android:gravity="right">

                <TextView
                    android:id="@+id/statusesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:gravity="right"
                    android:text="9999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/statusesCountImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/statusesCount"
                    android:src="@mipmap/ic_composer" />

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@id/statusesCountImg"
                    android:gravity="right"
                    android:text="9999"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/likesCount"
                    android:gravity="right"
                    android:src="@mipmap/ic_like" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tw__composer_light_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>